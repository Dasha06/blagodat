<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo1.MainWindow"
        Title="demo1">
    <DockPanel>
        <StackPanel Width="200"
            Orientation="Vertical"
            Spacing="10"
            Height="10">
            <TextBlock Text="             Авторизация" x:Name="AuthText"/>
            <TextBox VerticalAlignment="Center" x:Name="LoginTextBox"/>
            <StackPanel Orientation="Horizontal">
                <TextBox VerticalAlignment="Center" x:Name="PasswordTextBox" PasswordChar="*" Width="170"/>
                <Button Width="30" Height="30" Click="ShowPassword_OnClick"></Button>
            </StackPanel>
            <TextBlock x:Name="Error_TextBlock"></TextBlock>
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="SignButton" 
                    Click="SignButton_OnClick" Content="Войти"/>
        </StackPanel>
    </DockPanel>
</Window>
